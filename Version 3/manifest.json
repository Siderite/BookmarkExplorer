{
	"manifest_version" : 2,

	"name" : "Siderite's Bookmark Explorer",
	"description" : "Navigate through bookmark folders on a single page",
	"version" : "3.0.0",

	"permissions" : [
		"tabs",
		"activeTab",
		"bookmarks",
		"contextMenus",
		"notifications",
		"chrome://favicon/",
		"storage",
		"unlimitedStorage"
	],
	"browser_action" : {
		"default_icon" : "icon.png",
		"default_popup" : "popup.html"
	},
	"background" : {
		"scripts" : ["apiWrapper.js","bookmarkExplorer.js","background.js"],
		"persistent" : false
	},
	"options_ui": {
    	"page": "settings.html",
    	"chrome_style": true
  	},
	"commands" : {
		"prevBookmark" : {
			"suggested_key" : {
				"default" : "Ctrl+Shift+K"
			},
			"description" : "Navigate to previous bookmark in the folder"
		},
		"nextBookmark" : {
			"suggested_key" : {
				"default" : "Ctrl+Shift+L"
			},
			"description" : "Navigate to next bookmark in the folder"
		},
		"skipBookmark" : {
			"description" : "Skip this bookmark in its folder"
		}
	},
	"icons" : {
		"16" : "icon.png",
		"128" : "bigIcon.png"
	}
}